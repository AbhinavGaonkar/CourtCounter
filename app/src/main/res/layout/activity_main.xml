<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abhinav.courtcounter.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout1"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:textAlignment="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Team A"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/teamA_label_TextView"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:id="@+id/teamA_score_TextView"

                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="+3 POINTS"
                android:textAlignment="center"
                android:id="@+id/teamA_3_pointer_Button"

                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="+2 POINTS"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/teamA_2_pointer_Button"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="FREE THROW"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/teamA_FreeThrow_Button"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:textAlignment="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Team B"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/teamB_label_TextView"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:id="@+id/teamB_score_TextView"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="+3 POINTS"
                android:textAlignment="center"
                android:id="@+id/teamB_3_pointer_Button"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="+2 POINTS"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/teamB_2_pointer_Button"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="FREE THROW"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/teamB_FreeThrow_Button"

                />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/reset_Button"
        android:layout_alignBottom="@+id/LinearLayout1"
        android:layout_centerInParent="true"

        />

</RelativeLayout>
